<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MeasurementActivity"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_above="@+id/linearLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/measurement_dba_min"
                android:id="@+id/textView_label_Min_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="0.2"
                android:textSize="15sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/measurement_dba_la90"
                android:id="@+id/textView_label_la90_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="0.2"
                android:textSize="15sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/measurement_dba_la50"
                android:id="@+id/textView_label_la50_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="0.2"
                android:textSize="15sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/measurement_dba_la10"
                android:id="@+id/textView_label_la10_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="0.2"
                android:textSize="15sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/measurement_dba_max"
                android:id="@+id/textView_label_Max_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="0.2"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="0.2"
                android:layout_height="4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_color_Min_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:background="@color/R5_SL_level"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="0.2"
                android:layout_height="4dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_color_LA90"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:background="@color/R4_SL_level" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:layout_weight="0.2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_color_LA50"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:background="@color/R3_SL_level" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:layout_weight="0.2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_color_LA10"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:background="@color/R2_SL_level"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:layout_weight="0.2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_color_Max_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:background="@color/R1_SL_level" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/no_valid_dba_value"
                android:id="@+id/textView_value_Min_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/no_valid_dba_value"
                android:id="@+id/textView_value_LA90"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/no_valid_dba_value"
                android:id="@+id/textView_value_LA50"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/no_valid_dba_value"
                android:id="@+id/textView_value_LA10"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/no_valid_dba_value"
                android:id="@+id/textView_value_Max_SL"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="145dp">

            <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/NEIChart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/RNEChart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/spectrumChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/measureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/userinfo_button_measure"
            />
        <Button android:id="@+id/uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/result_button_upload"/>
        <Button android:id="@+id/mapBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/result_button_map"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/result_progress_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_corner"
        android:gravity="end|center_horizontal"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:text="@string/result_title_progress_loading"/>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/result_progress_control"
            android:layout_width="match_parent"
            android:progress="25"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_height="0dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/result_progress_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_cancel_change"/>

    </LinearLayout>
</RelativeLayout>

    <com.nhaarman.supertooltips.ToolTipRelativeLayout
        android:id="@+id/activity_tooltip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/list_view_layout_width"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</androidx.drawerlayout.widget.DrawerLayout>